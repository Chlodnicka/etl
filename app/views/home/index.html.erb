<div class="home">
  <div class="content">
    <div class="box">
      <div class="intro">
        <h1>ETL process</h1>
        <h2>Get data from Ceneo</h2>
      </div>

      <div class="info">
        <p>Insert product code in form below and wait for results.</p>
        <p><%= link_to('Or check out existing data.', products_path) %></p>
      </div>

      <%= form_for(@product) do |f| %>
          <% if @product.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

                <ul>
                  <% @product.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="field">
            <%= f.text_field :code, placeholder: "INSERT CODE"%>
          </div>

          <div class="actions">
            <%= f.submit "ETL"%>
          </div>
      <% end %>
    </div>

  </div>
</div>