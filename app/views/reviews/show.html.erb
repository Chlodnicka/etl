<p id="notice"><%= notice %></p>
<h3><%= @review.product.model %></h3>
<h4><%= @review.author %></h4>
<p>
  <strong>Summary:</strong>
  <%= @review.summary %>
</p>

<p>
  <strong>Pros:</strong>
</p>
<% require 'json' %>
<% pros = JSON.parse @review.pros %>
<ul>
  <% pros.each do |item| %>
      <li><%= item %></li>
  <% end %>
</ul>


<p>
  <strong>Cons:</strong>
</p>
<% cons = JSON.parse @review.cons %>
<ul>
  <% cons.each do |item| %>
      <li><%= item %></li>
  <% end %>
</ul>

<p>
  <strong>Time:</strong>
  <%= @review.time %>
</p>

<p>
  <strong>Recommendation:</strong>
  <%= @review.recommendation %>
</p>

<p>
  <strong>Useful:</strong>
  <%= @review.useful %>
</p>

<p>
  <strong>Not useful:</strong>
  <%= @review.not_useful %>
</p>

<p>
  <strong>Score:</strong>
  <%= @review.score %>
</p>

<%= link_to 'Back', product_path(@review.product), class: "btn" %>
