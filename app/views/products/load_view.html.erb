<h3>Loading product <%= @product.code %></h3>

<% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<%= form_for @product, :url => product_load_path(@product) do |f| %>

    <%= f.hidden_field :code %>

    <div class="actions">
      <%= f.submit "Load" %>
    </div>
<% end %>

<%= link_to 'Back', products_path, class: "btn" %>