<p id="notice"><%= notice %></p>

<p>
  <strong>Code:</strong>
  <%= @product.code %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand %>
</p>

<p>
  <strong>Model:</strong>
  <%= @product.model %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @product.notes %>
</p>

<%= link_to 'Update', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<div>
  <h2>Reviews</h2>

  <table>
    <thead>
    <tr>
      <th>Summary</th>
      <th>Pros</th>
      <th>Cons</th>
      <th>Time</th>
      <th>Recommendation</th>
      <th>Useful</th>
      <th>Not useful</th>
      <th>Score</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @product.reviews.each do |review| %>
        <tr>
          <td><%= review.summary %></td>
          <td><%= review.pros %></td>
          <td><%= review.cons %></td>
          <td><%= review.time %></td>
          <td><%= review.recommendation %></td>
          <td><%= review.useful %></td>
          <td><%= review.not_useful %></td>
          <td><%= review.score %></td>
          <td><%= review.author %></td>
          <td><%= link_to 'Show', review %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

